{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"outDir": "dist",
		"rootDir": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"strict": false,
		"noImplicitAny": false,
		"resolveJsonModule": true,
		"sourceMap": true,
		"declaration": true
	},
	"include": [
		"**/*.ts",
		"**/*.cts",
		"**/*.mts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
